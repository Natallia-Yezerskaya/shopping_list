<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/itemListBackgroundChecked</item>
        <item name="android:alertDialogStyle">@style/userAlertDialog</item>
        <item name="android:textAppearanceLarge">@style/dlgTitleText</item>

    </style>

    <style name="userAlertDialog">
        <item name="android:paddingBottom">6dp</item>
        <item name="android:topDark">@color/itemListBackgroundChecked</item>
        <item name="android:centerDark">@color/itemListBackgroundChecked</item>
        <item name="android:bottomDark">@color/itemListBackgroundChecked</item>
        <item name="android:bottomMedium">@color/itemListBackgroundChecked</item>

    </style>

    <style name="dlgTitleText" >

        <item name="android:textColor">#0d25f8</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
